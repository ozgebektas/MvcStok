@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteri", FormMethod.Post))
  {
    <p>
        Aranacak Müşteri Adı:@Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </p>

   }
<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <td>MÜŞTERİ AD</td>
        <td>MÜŞTERİ SOYAD</td>
        <td>SİL</td>
        <td>GÜNCELLE</td>
        <td>ALERT</td>
       
    </tr>
    <tbody>
        @foreach (var mstr in Model)
        {
            <tr>
                <th>@mstr.MUSTERIID</th>
                <td>@mstr.MUSTERIAD</td>
                <td>@mstr.MUSTERISOYAD</td>
                <td><a href="/MUSTERI/SIL/@mstr.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/MUSTERI/MusteriGetir/@mstr.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("SİL BUTONU","SIL", new {id=mstr.MUSTERIID},new { @class="btn btn-warning", onclick="return confirm('Gerçekten silmek istiyor musunuz?')"})</td>
            </tr>

        }
    </tbody>

</table>
<a href="/MUSTERI/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
